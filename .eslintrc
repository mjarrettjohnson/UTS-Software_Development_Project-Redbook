{
  "extends": ["eslint:recommended", "google"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["babel", "react"],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "strict": [2, "never"],
    "require-jsdoc": 0,
    "no-invalid-this": 0,
    "max-len": [1, 120],
    "object-curly-spacing": ["error", "always"],
    "arrow-parens": "off",
    "func-call-spacing": "off",
    "space-before-function-paren": "off",
    "babel/new-cap": 1,
    "babel/no-await-in-loop": 1,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "linebreak-style": "off"
  }
}
